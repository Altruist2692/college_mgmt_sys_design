
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Student Details</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Principal</a>
      </li>
      <li>
        <a href="#">Student</a>
      </li>
      <li class="active">
        <strong>Search Details</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-6">
      <form method="get" class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label">Course:</label>
          <div class="col-sm-10">
            <select class="form-control m-b" name="account">
              <option>Course - 1</option>
              <option>Course - 2</option>
              <option>Course - 3</option>
              <option>Course - 4</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Branch:</label>
          <div class="col-sm-10">
            <select class="form-control m-b" name="account">
              <option>Branch - 1</option>
              <option>Branch - 2</option>
              <option>Branch - 3</option>
              <option>Branch - 4</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Year:</label>
          <div class="col-sm-10">
            <select class="form-control m-b" name="account">
              <option>2016</option>
              <option>2017</option>
              <option>2018</option>
              <option>2019</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Section:</label>
          <div class="col-sm-10">
            <select class="form-control m-b" name="account">
              <option>Section - 1</option>
              <option>Section - 2</option>
              <option>Section - 3</option>
              <option>Section - 4</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Name:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2">
            <button class="btn btn-primary" type="submit">Search</button>
          </div>
        </div>
        <div class="hr-line-dashed"></div>
      </form>
    </div>
    <div class="col-md-6">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Student Detail</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right">
            <img alt="image" class="img-responsive" src="<%= image_path('a1.jpg') %>">
          </div>
          <div class="ibox-content profile-content">
            <h4><strong>Dev Daxesh</strong></h4>
            <p><i class="fa fa-map-marker"></i> 1st Semester</p>
            <p><i class="fa fa-map-marker"></i> Mechanical Branch</p>
            <p><i class="fa fa-map-marker"></i> Regester No. 12345</p>
            <p><i class="fa fa-google-plus"></i> Email: nish@mail.com</p>
            <p><i class="fa fa-phone"></i> 9023902342</p>
            <h5>
              About Daxesh
            </h5>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.
            </p>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $("span.pie").peity("pie", {
                fill: ['#1ab394', '#d7d7d7', '#ffffff']
            })

            $(".line").peity("line", {
                fill: '#1ab394',
                stroke: '#169c81',
            })

            $(".bar").peity("bar", {
                fill: ["#1ab394", "#d7d7d7"]
            })


        });

    </script>

<% end %>

