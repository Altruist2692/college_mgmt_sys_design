<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Add New Time Table</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Home</a>
      </li>
      <li>
        <a>Admin</a>
      </li>
      <li class="active">
        <strong>Add New Time Table</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-5">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <div class="ibox float-e-margins">
      </div>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Create New Time Table</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li>
                <a href="#">Config option 1</a>
              </li>
              <li>
                <a href="#">Config option 2</a>
              </li>
            </ul>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <form method="get" class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label">Course</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="account">
                  <option>Course - 1</option>
                  <option>Course - 2</option>
                  <option>Course - 3</option>
                  <option>Course - 4</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Branch</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="account">
                  <option>Department - 1</option>
                  <option>Department - 2</option>
                  <option>Department - 3</option>
                  <option>Department - 4</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Year</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="account">
                  <option>2016</option>
                  <option>2017</option>
                  <option>2018</option>
                  <option>2019</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Semester</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="account">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Section</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="account">
                  <option>Section - 1</option>
                  <option>Section - 2</option>
                  <option>Section - 3</option>
                  <option>Section - 4</option>
                </select>
              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-white" type="submit">Cancel</button>
                <button class="btn btn-primary" type="submit">Generate TimeTable</button>
              </div>
            </div>
          </form>
          <div class="jqGrid_wrapper">
            <table id="table_list_2"></table>
            <div id="pager_list_2"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <button class="btn btn-white" type="submit">Cancel</button>
              <button class="btn btn-primary" type="submit">Modify TimeTable</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


